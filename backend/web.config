<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="api-server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="api">
          <match url="/*" />
          <action type="Rewrite" url="api-server.js" />
        </rule>
      </rules>
    </rewrite>
    <!-- Pre-warm the application after restart to reduce cold start latency -->
    <applicationInitialization doAppInitAfterRestart="true">
      <add initializationPage="/api/warmup" />
    </applicationInitialization>
  </system.webServer>
</configuration>