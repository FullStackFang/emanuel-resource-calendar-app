{
  "name": "outlook-calendar-api",
  "version": "1.0.0",
  "description": "API for Outlook Calendar App with MongoDB",
  "main": "api-server.js",
  "scripts": {
    "start": "node api-server.js",
    "dev": "nodemon api-server.js",
    "test": "node node_modules/jest/bin/jest.js",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:unit": "node node_modules/jest/bin/jest.js --testPathPattern=unit",
    "build-info": "powershell -Command \"$commit = git rev-parse --short HEAD; $time = Get-Date -Format o; @{commit=$commit; buildTime=$time} | ConvertTo-Json | Out-File -Encoding utf8 build-info.json\"",
    "deploy": "npm run build-info && az webapp up --resource-group DefaultResourceGroup-EUS --name emanuelnyc-services-api --runtime NODE:20-lts --sku B1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@azure/msal-node": "^3.8.3",
    "@sentry/node": "^10.36.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mongodb": "^5.7.0",
    "multer": "^2.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nock": "^13.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
