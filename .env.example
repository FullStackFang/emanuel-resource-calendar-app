# Environment Variables Example
# Copy this file to .env and update with your values

# Frontend Debug Mode (optional)
# Set to 'true' to enable debug logs even in production builds
VITE_DEBUG=false

# Backend Environment
# Set to 'production' to disable debug logs in backend
NODE_ENV=development

# Backend Debug Mode (optional)
# Set to 'true' to force enable debug logs regardless of NODE_ENV
DEBUG=false

# API Configuration
# Update these values for your environment
VITE_API_BASE_URL=http://localhost:3001/api

# Database Configuration
MONGODB_CONNECTION_STRING=your_mongodb_connection_string
MONGODB_DATABASE_NAME=emanuelnyc

# Calendar Configuration
CALENDAR_MODE=sandbox

# Email Notification Configuration
# Master toggle for sending emails (set to 'true' to enable)
EMAIL_ENABLED=true

# Shared mailbox to send emails from
EMAIL_FROM_ADDRESS=templeEventsSandbox@emanuelnyc.org
EMAIL_FROM_NAME=

# Testing: Redirect ALL emails to this address (leave empty for production)
# Useful for testing without sending to real recipients
EMAIL_REDIRECT_TO=

# Azure AD Client Secret for email sending (separate from user auth)
# Create in Azure Portal > App Registration > Certificates & secrets
# Requires Mail.Send application permission with admin consent
EMAIL_CLIENT_SECRET=

# AI Chat Configuration (Step 1)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=
AI_MODEL=claude-3-5-haiku-20241022

# Sentry Error Tracking Configuration
# Get your DSN from https://sentry.io/
# Backend Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Sentry source map upload (for production builds)
# Get auth token from https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=emanuel-calendar

# Frontend Sentry (must prefix with VITE_ for Vite to expose)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=1.0.0